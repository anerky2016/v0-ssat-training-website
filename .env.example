# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Apple OAuth
APPLE_CLIENT_ID=your-apple-service-id-here
APPLE_CLIENT_SECRET=your-apple-client-secret-here

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-app-id-here
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret-here

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PurelyMail SMTP (for contact form and study reminders)
SMTP_HOST=smtp.purelymail.com
SMTP_PORT=587
SMTP_USER=your-email@midssat.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@midssat.com

# Cron Job Secret (for daily email reminders)
# Generate with: openssl rand -base64 32
# This protects the /api/cron/daily-reminders endpoint
CRON_SECRET=your-cron-secret-here

# OpenAI API (for vocabulary word illustrations)
OPENAI_API_KEY=your-openai-api-key-here
